<div class="row">
  <div class="col-sm-6 offset-sm-3">
<h1 class="login">ログイン画面</h1>
<%= form_with(url: login_path, scope: :sessions, local: true)do |f| %>
　
    <div class= "form_group">
        <%= f.label :email, "Eメール" %>
        <%= f.email_field :email, class: "form_control-1" %>
    </div>
    <div class= "form_group">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, class: "form_control-2" %>
    </div>
    <div class= "form_group">
        新規ユーザー？<%= link_to "クリック", new_user_path %>
    </div>
    <%= f.submit "ログインする", class: "btn btn-primary btn-block" %>
<% end %>
    </div>
</div>
