<nav class="navbar navbar-dark bg-dark">
  <%= link_to "Tweet", puts_path, class:"pathnavbar-brand" %>
</nav>

<h1 class="new_form">入力フォーム</h1>

<%= form_for :put, url: puts_path do |f|  %>
    
    <div class="form_group">
        <i class="fas fa-user"></i><%= f.label :username, "名前:" %>
        <%= f.text_field :username, placeholder: "username", class: "form_control-1-1" %>
    </div>
    
    <div class="form_group">
        <i class="fab fa-angellist"></i><%= f.label :title, "タイトル:" %>
        <%= f.text_field :title, placeholder: "title", class: "form_control-2-2" %>
    </div>
    <div class="form_group">
        <i class="fas fa-question-circle"></i><%= f.label :body, "内容:" %>
        <%= f.text_area :body, placeholder: "Contents of question", class: "form_control-3-3" %>
    </div>

<ul class="new_btn">
    <li><%= f.submit "送信", class: "btn-1 btn_black-1" %></li>
    
    <li><%= link_to "戻る", puts_path, class: "btn-2 btn_black-2" %></li>
    
</ul>
    



<% end %>